<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/splite_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/llBarHomeContainer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="1dp"
            android:paddingTop="9dp" >

            <ImageView
                android:id="@+id/ivBarHome"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/tvBarHome"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="0dp"
                android:clickable="false"
                android:focusable="false"
                android:gravity="center"
                android:text="@string/main_home"
                android:textColor="@color/gray_999999"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llBarAskContainer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="1dp"
            android:paddingTop="9dp"
            android:visibility="visible" >

            <ImageView
                android:id="@+id/ivBarAsk"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:scaleType="fitXY"/>

            <TextView
                android:id="@+id/tvBarAsk"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="0dp"
                android:duplicateParentState="true"
                android:focusable="false"
                android:gravity="center"
                android:text="@string/main_ask"
                android:textColor="@color/gray_999999"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llBarMessageContainer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="1dp"
            android:paddingTop="9dp" >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">
                <ImageView
                    android:id="@+id/ivBarMessage"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="18dp"
                    android:scaleType="fitXY"
                    />
                <TextView
                    android:id="@+id/tvMessageCount"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginLeft="2dp"
                    android:layout_toRightOf="@+id/ivBarMessage"
                    android:background="@drawable/shape_red_circle_bg"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/white"
                    android:textSize="11sp"
                    android:visibility="invisible"
                    />
                <TextView
                    android:id="@+id/tvMessage"
                    android:layout_width="9dp"
                    android:layout_height="9dp"
                    android:layout_marginLeft="2dp"
                    android:layout_toRightOf="@+id/ivBarMessage"
                    android:background="@drawable/shape_red_bg"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="11sp"
                    android:visibility="invisible"
                    />
            </RelativeLayout>

            <TextView
                android:id="@+id/tvBarMessage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="0dp"
                android:duplicateParentState="true"
                android:focusable="false"
                android:gravity="center"
                android:text="@string/main_message"
                android:textColor="@color/gray_999999"
                android:textSize="10sp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/llBarMyContainer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="1dp"
            android:paddingTop="9dp" >

            <ImageView
                android:id="@+id/ivBarMy"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:scaleType="fitXY"/>

            <TextView
                android:id="@+id/tvBarMy"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="0dp"
                android:duplicateParentState="true"
                android:focusable="false"
                android:gravity="center"
                android:text="@string/main_my"
                android:textColor="@color/gray_999999"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>