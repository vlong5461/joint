<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:indicator="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <com.third.view.allen.AutoScrollViewPager android:layout_height="match_parent" android:layout_width="match_parent" android:id="@+id/scroll_pager"/>

    <com.third.view.allen.ViewGroupIndicator android:layout_height="30dp" android:layout_width="wrap_content" android:id="@+id/scroll_pager_indicator" indicator:radius="10dp" indicator:distance_from_two_indicator="10dp" indicator:unselected_color="#ffffff" indicator:selected_color="#ffffff" android:layout_alignParentBottom="true"/>
</RelativeLayout>
