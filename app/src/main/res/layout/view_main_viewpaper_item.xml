<?xml version="1.0" encoding="utf-8"?>
<com.he.joint.view.MainHomeViewItem
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/refresh_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg_gray">

    <include layout="@layout/pullable_refresh_head" />

    <com.third.view.pullablelistview.PullableExpandableListView
        android:id="@+id/expandListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:groupIndicator="@null"
        android:listSelector="@color/transparent"
        android:scrollbars="none" />

    <include layout="@layout/pullable_load_more" />

</com.he.joint.view.MainHomeViewItem>