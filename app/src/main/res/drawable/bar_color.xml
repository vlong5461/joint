<?xml version="1.0" encoding="utf-8"?>
<layer-list  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="10dip" />
            <gradient android:startColor="@color/gray_2"
                android:centerColor="@color/gray_2" android:centerY="0.75"
                android:endColor="@color/gray_2" android:angle="270" />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="10dp" />
                <gradient android:startColor="#00000000"
                    android:centerColor="#00000000" android:centerY="0.75"
                    android:endColor="#00000000" android:angle="270" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="10dp" />
                <gradient android:startColor="@color/orange_red"
                    android:centerColor="@color/orange_red" android:centerY="0.75"
                    android:endColor="@color/orange_red" android:angle="270" />
            </shape>
        </clip>
    </item>
</layer-list>